{
  "name": "bun-video-chat",
  "version": "1.0.0",
  "type": "module",
  "description": "A modern realtime chat and video chat application built with Bun",
  "scripts": {
    "dev": "bun --hot ./server/index.ts",
    "build": "bun build ./server/index.ts --outdir ./dist",
    "build:css": "bunx tailwindcss -i ./client/src/styles/main.css -o ./client/src/styles/compiled.css",
    "watch:css": "bunx tailwindcss -i ./client/src/styles/main.css -o ./client/src/styles/compiled.css --watch",
    "test": "bun test",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,json,html,css}\"",
    "db:migrate": "bun run ./server/src/scripts/migrate.ts",
    "db:seed": "bun run ./server/src/scripts/seed.ts",
    "db:test": "bun run ./server/src/scripts/test-db.ts"
  },
  "dependencies": {
    "@auth/core": "^0.35.0",
    "kysely": "^0.27.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-react-hooks": "^4.6.2",
    "postcss": "^8.4.39",
    "prettier": "^3.3.2",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.5.3"
  },
  "workspaces": [
    "server",
    "client"
  ]
}